<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_shop_list_item">

    <ImageView
        android:id="@+id/picture_shop_list_imageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@mipmap/ic_person_avatar"
        app:layout_constraintBottom_toTopOf="@id/title_shop_list_textView"
        app:layout_constraintDimensionRatio="1:1" />

    <TextView
        android:id="@+id/title_shop_list_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="花间裳/白山茶/浪漫蕾丝法式半裙中长裙女2019花间裳/白山茶/浪漫蕾丝法式半裙中长裙女2019花间裳/白山茶/浪漫蕾丝法式半裙中长裙女2019"
        android:textColor="@color/text_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picture_shop_list_imageView" />

    <TextView
        android:id="@+id/price_shop_list_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="$ 359"
        android:textColor="#EA615B"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_shop_list_textView" />

    <TextView
        android:id="@+id/sale_shop_list_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        android:text="已售 69"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_shop_list_textView" />

</android.support.constraint.ConstraintLayout>

