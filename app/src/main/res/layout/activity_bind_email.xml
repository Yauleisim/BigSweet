<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/email_bind_email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_input_et"
        android:hint="@string/activity_bind_email_email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bind_bind_email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_post_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/activity_bind_email_bind"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/email_bind_email_editText" />

</android.support.constraint.ConstraintLayout>