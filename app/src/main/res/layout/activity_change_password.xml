<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/old_password_change_password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/bg_input_et"
        android:hint="旧密码"
        android:padding="10dp"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_password_change_password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_input_et"
        android:hint="新密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/old_password_change_password_editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="6dp"
        android:text="@string/activity_register_prompt"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password_change_password_editText" />

    <Button
        android:id="@+id/change_change_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_post_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="立即修改"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/new_password_change_password_editText" />

</android.support.constraint.ConstraintLayout>